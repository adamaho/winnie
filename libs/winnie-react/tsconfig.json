{
  "display": "@rtkwlf/winnie-react",
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2017",
    "lib": [
      "ES2017",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./types",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    /* Bundler mode */
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}